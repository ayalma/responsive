{
	"name": "responsive",
	"displayName": "responsive",
	"description": "a tool for generate responsive file in flutter",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:responsive.new_responsive"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Bloc",
				"properties": {
					"bloc.checkForUpdates": {
						"type": "boolean",
						"default": true,
						"description": "Whether to check if you are using the latest package versions at startup."
					},
					"bloc.newBlocTemplate": {
						"type": "string",
						"enum": [
							"auto",
							"equatable",
							"freezed",
							"simple"
						],
						"enumDescriptions": [
							"automatically pick template based on dependencies",
							"always use equatable template",
							"always use freezed template",
							"always use simple template"
						]
					}
				}
			},
			{
				"title": "Bloc",
				"properties": {
					"bloc.newCubitTemplate": {
						"type": "string",
						"enum": [
							"auto",
							"equatable",
							"freezed",
							"simple"
						],
						"enumDescriptions": [
							"automatically pick template based on dependencies",
							"always use equatable template",
							"always use freezed template",
							"always use simple template"
						]
					}
				}
			}
		],
		"commands": [
			{
				"command": "responsive.new_responsive",
				"title": "New Responsive View"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "responsive.new_responsive",
					"group": "resGroup@1"
				}
			],
			"editor/title": [
				{
					"when": "explorerResourceIsFolder",
					"command": "responsive.new_responsive",
					"group": "resGroup@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.165",
		"@types/mkdirp": "^1.0.1",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"change-case": "^3.1.0",
		"js-yaml": "^3.13.1",
		"lodash": "^4.17.19",
		"mkdirp": "^0.5.1",
		"semver": "^6.3.0"
	}
}
